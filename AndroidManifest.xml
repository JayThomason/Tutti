<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stanford.tutti"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:name="com.stanford.tutti.Globals"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.stanford.tutti.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.stanford.tutti.ArtistListView"
            android:label="@string/title_activity_artist_list_view" >
        </activity>
                <activity
            android:name="com.stanford.tutti.ArtistAlbumListView"
            android:label="@string/title_activity_artist_album_list_view" >
        </activity>
        <activity
            android:name="com.stanford.tutti.ArtistAlbumSongListView"
            android:label="@string/title_activity_artist_album_song_list_view" >
        </activity>
        <activity
            android:name="com.stanford.tutti.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="com.stanford.tutti.SongMediaPlayer"
            android:label="@string/song_media_player">
        </activity>
        <activity
            android:name="com.stanford.tutti.NewJamActivity"
            android:label="@string/title_activity_new_jam"
            android:parentActivityName="com.stanford.tutti.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.stanford.tutti.MainActivity" />
        </activity>
        <activity
            android:name="com.stanford.tutti.JoinJamActivity"
            android:label="@string/title_activity_join_jam"
            android:parentActivityName="com.stanford.tutti.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.stanford.tutti.MainActivity" />
        </activity>
        <activity
            android:name="com.stanford.tutti.ViewJamActivity"
            android:label="@string/title_activity_view_jam" >
        </activity>
        <activity
            android:name="com.stanford.tutti.SettingsMenuActivity"
            android:label="@string/title_activity_settings_menu"
            android:parentActivityName="com.stanford.tutti.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.stanford.tutti.MainActivity" />
        </activity>
        <activity
            android:name="com.stanford.tutti.HelpMenuActivity"
            android:label="@string/title_activity_help_menu"
            android:parentActivityName="com.stanford.tutti.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.stanford.tutti.MainActivity" />
        </activity>
    </application>

</manifest>
