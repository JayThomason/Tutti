<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ViewJamActivity" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/current_jam"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/listView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/player_footer"
        android:layout_below="@+id/textView3"
        android:background="#ff0927"
        android:textColor="#ffffff" >

    </ListView>

    <LinearLayout
        android:id="@+id/player_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        style="@android:style/ButtonBar"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/song_media_player_back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/imgdesc"
            android:background="@drawable/tutti_back_button" />

        <ImageButton
            android:id="@+id/song_media_player_start_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/imgdesc"
            android:background="@drawable/tutti_play_button" />

        <ImageButton
            android:id="@+id/song_media_player_pause_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/imgdesc"
            android:background="@drawable/tutti_pause_button" />

        <ImageButton
            android:id="@+id/song_media_player_next_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/imgdesc"
            android:background="@drawable/tutti_next_button" />
    </LinearLayout>

    <Button
        android:id="@+id/secretButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/listView3"
        android:layout_marginRight="00dp"
        android:background="@android:color/transparent"
        android:onClick="popupJoinRequest"
        android:text="" />

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        
        android:contentDescription="@string/imgdesc"
        android:background="@drawable/add_button"
        android:onClick="addSongs" />

</RelativeLayout>