        <activity
            android:name="com.stanford.tutti.ArtistAlbumSongListView"
            android:label="@string/title_activity_artist_album_song_list_view" >
        </activity>
        <activity
            android:name="com.stanford.tutti.MenuActivity"
            android:label="@string/title_activity_menu" >
